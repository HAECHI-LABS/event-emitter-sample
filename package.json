{
  "name": "hardhat-foundry-template",
  "version": "1.0.0",
  "description": "smart contract development framework",
  "scripts": {
    "node" : "anvil --fork-url $MAINNET_RPC_URL --fork-block-number $MAINNET_FORK_BLOCK",
    "build": "forge build",
    "compile": "forge build",
    "compile:hardhat": "npx hardhat compile",
    "test": "forge test --fork-url $MAINNET_RPC_URL --fork-block-number $MAINNET_FORK_BLOCK",
    "test:hardhat": "npx hardhat test",
    "coverage" : "npx hardhat coverage",
    "clear" : "rm -rf contracts/* && rm -rf test/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leekt/foundry-template.git"
  },
  "license": "MIT",
  "dependencies": {
    "bignumber.js": "9.0.2",
    "hardhat": "^2.9.3"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "chai": "^4.3.6",
    "coveralls": "3.1.1",
    "eth-gas-reporter": "0.2.25",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.5",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "mocha-lcov-reporter": "1.3.0",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4",
    "web3": "^1.7.3"
  }
}
